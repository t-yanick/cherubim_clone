<div class="container" style="width: 75%; margin: auto;">
  <div class="text-center">
    <h2>Resend confirmation instructions</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "my-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
        <br /><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        </div>

        <div class="text-center"> <!-- Add this wrapper to center the button -->
          <%= f.submit "Resend instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>