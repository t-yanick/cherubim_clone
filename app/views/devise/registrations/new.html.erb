<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.label :first_name, class: "control-label" %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :last_name, class: "control-label" %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.label :Nic, "National Identity Card Number", class: "control-label" %><br />
            <%= f.text_field :Nic, autofocus: true, autocomplete: "National identity card number", class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :Dob, "Date of Birth", class: "control-label" %><br />
            <%= f.date_field :Dob, autofocus: true, autocomplete: "Date of birth", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group row">
        <div class="col-sm-6">
          <%= f.label :password, class: "control-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="col-sm-6">
          <%= f.label :password_confirmation, class: "control-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        </div>

        <div class="form-group">
          <%= f.label :role_id, "Role", class: "control-label" %><br />
          <%= f.collection_select :role_id, Role.all, :id, :name, { prompt: true }, { class: "form-control" } %>
        </div>
         <div class="form-group">
              <%= f.label :country %>
              <%= f.select :country, options_for_select(ISO3166::Country.all.map { |c| [c.translations['en'], c.alpha2] }), {prompt:true}, class: "form-control" %>
        </div>
        <div class="form-actions text-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to "Log in", new_cherubim_user_session_path %><br />
      </div>
    </div>
  </div>
</div>