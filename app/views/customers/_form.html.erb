<div class="customer-container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: customer) do |form| %>
        <% if customer.errors.any? %>
          <div class="error-container">
            <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
            <ul>
              <% customer.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :telephone %>
          <%= form.text_field :telephone, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :good_id %>
          <%= form.text_field :good_id, class: "form-control" %>
        </div>

        <div class="container d-flex justify-content-center align-items-center form-group">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
