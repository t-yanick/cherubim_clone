<div class="customer-container">
  <div class="row justify-content-center">
    <div class="col-md-6">
     <%= form_for @customer, as: :customer, url: onlycustomer_path, method: :post, html: { class: "user_only"} do |form| %>
 

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :telephone %>
          <%= form.text_field :telephone, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :country %>
          <%= form.text_field :country, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class: "form-control" %>
        </div>
        
        <div class="container d-flex justify-content-center align-items-center form-group">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
