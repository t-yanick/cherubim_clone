<div class="container">
  <%= form_with(model: good) do |form| %>
    <% if good.errors.any? %>
      <div class="error-container">
        <h2><%= pluralize(good.errors.count, "error") %> prohibited this good from being saved:</h2>
        <ul>
          <% good.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :weight %>
      <%= form.number_field :weight, step: :any, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, step: :any, class: "form-control" %>
    </div>
    <div>
      <%= form.collection_select :customer_id, Customer.all,:id,:name_with_initial,  {:prompt => 'Please select customer for this deposit'} %>
    </div>
    <div class="form-check">
      <%= form.label :status_received, class: "form-check-label" %>
      <%= form.check_box :status_received, class: "form-check-input" %>
    </div>

    <div class="container d-flex justify-content-center align-items-center" form-group">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
